{
  "name": "chronometry-web",
  "version": "2.0.0",
  "description": "Веб-приложение для хронометража процессов в магазине",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:unit": "jest --testPathPattern=tests/unit --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint src server.js",
    "predeploy": "npm run test:unit",
    "deploy": "npm run predeploy && ./deploy.sh"
  },
  "keywords": [
    "chronometry",
    "store",
    "pwa",
    "time-tracking"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.0.0"
  }
}
